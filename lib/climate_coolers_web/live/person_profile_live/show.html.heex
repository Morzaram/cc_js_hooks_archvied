<h1>Show Profile</h1>

<%= if @live_action in [:edit] do %>
  <.modal return_to={Routes.person_profile_show_path(@socket, :show, @profile)}>
    <.live_component
      module={ClimateCoolersWeb.PersonProfileLive.FormComponent}
      id={@profile.id}
      title={@page_title}
      action={@live_action}
      profile={@profile}
      return_to={Routes.person_profile_show_path(@socket, :show, @profile)}
    />
  </.modal>
<% end %>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @profile.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @profile.description %>
  </li>

  <li>
    <strong>Birthdate:</strong>
    <%= @profile.birthdate %>
  </li>

</ul>

<span><%= live_patch "Edit", to: Routes.person_profile_show_path(@socket, :edit, @profile), class: "button" %></span> |
<span><%= live_redirect "Back", to: Routes.person_profile_index_path(@socket, :index) %></span>
